<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:id="@+id/left_fragment_root_view"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:id="@+id/account_manage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView 
            android:textColor="#ffffff"
            android:text="账号管理"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView 
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:src="@drawable/adapter_view_arr_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/catalog_left_fragment_line"/>
    <RelativeLayout 
        android:id="@+id/clear_magazine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView 
            android:textColor="#ffffff"
            android:text="清理杂志"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView 
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:src="@drawable/adapter_view_arr_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
     <ImageView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/catalog_left_fragment_line"/>
    
    <RelativeLayout 
        android:id="@+id/about_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView 
            android:textColor="#ffffff"
            android:text="关于我们"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView 
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:src="@drawable/adapter_view_arr_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
     <ImageView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/catalog_left_fragment_line"/>
    
    <RelativeLayout 
        android:id="@+id/advice_response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView 
            android:textColor="#ffffff"
            android:text="意见反馈"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView 
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:src="@drawable/adapter_view_arr_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
     <ImageView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/catalog_left_fragment_line"/>

    <GridView
        android:id="@+id/left_fragment_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </GridView>
</LinearLayout>
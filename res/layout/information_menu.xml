<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/information_menu_child_main">
    <LinearLayout android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1.0"
	    android:id="@+id/information_menu_top_layout"/>
    <TableLayout  android:gravity="bottom" 
        android:layout_width="fill_parent"
        android:paddingTop="4dip"
        android:paddingBottom="6dip"
        android:background="@drawable/information_menu_background"
        android:layout_height="wrap_content">
        <TableRow android:gravity="center_vertical" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content">
           
            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone">
            <RelativeLayout android:gravity="center" 
                   android:orientation="vertical" 
                   android:id="@+id/information_menu_child_refresh" 
                   android:background="@drawable/information_menu_item_background_default_new" 
                   android:layout_width="112px"  
                   android:layout_height="112px" 
                   android:layout_marginRight="1dip">
                <ImageView android:id="@+id/information_menu_child_refresh_icon"
                     android:layout_width="30dip" 
                     android:layout_height="30dip"
                     android:layout_centerHorizontal="true"
                     android:layout_marginTop="3dip"
                     android:src="@drawable/information_menu_refresh_background"/>
                <TextView  android:id="@+id/information_menu_child_refresh_text" 
                     android:gravity="center"
                     android:layout_width="fill_parent" 
                     android:layout_height="wrap_content"
                     android:layout_below="@id/information_menu_child_refresh_icon"
                     android:textColor="@drawable/information_menu_child_text_color" 
                     android:text="刷新"
                     android:textStyle="bold" />
             </RelativeLayout>
            </LinearLayout>
            
            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center">
            <RelativeLayout android:gravity="center" 
                   android:orientation="vertical" 
                   android:id="@+id/information_menu_child_offine_download" 
                   android:background="@drawable/information_menu_item_background_default_new" 
                   android:layout_width="112px"  
                   android:layout_height="112px" 
                   android:layout_marginRight="1dip">
                <ImageView android:id="@+id/information_menu_child_offine_download_icon"
                     android:layout_width="30dip" 
                     android:layout_height="30dip"
                     android:layout_centerHorizontal="true"
                     android:layout_marginTop="3dip"
                     android:src="@drawable/app_menu_offline_download"/>
                <TextView  android:id="@+id/information_menu_child_offine_download_text" 
                     android:gravity="center" 
                     android:layout_width="fill_parent" 
                     android:layout_height="wrap_content"
                     android:layout_below="@id/information_menu_child_offine_download_icon"
                     android:textColor="@drawable/information_menu_child_text_color"
                     android:text="离线下载"
                     android:textStyle="bold" />
            </RelativeLayout>
            </LinearLayout>
            

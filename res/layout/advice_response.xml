<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/advice_response_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2EFEA"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#e6d0b7" >

        <EditText
            android:id="@+id/advice_content"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:hint="请输入反馈内容"
            android:textColor="#d3ac8d" />
        <TextView 
            android:layout_gravity="bottom|right"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:textColor="#808080"
            android:textSize="10sp"
            android:id="@+id/input_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还可以输入150个字"/>
    </FrameLayout>

    <Button
        android:id="@+id/post_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/product_list_add_vs_button"
        android:text="提交"
        android:textColor="#9e1e1e" />

</LinearLayout>
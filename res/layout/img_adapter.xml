<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/mag_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pchouse2"/>

        <ImageView
            android:id="@+id/img_right_top_is_downloading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:background="@anim/downloading"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_right_top_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:src="@drawable/catalog_magazing_download_pause"
            android:visibility="gone" />
        
        <ImageView 
            android:id="@+id/img_right_top_between_start_and_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:src="@drawable/between_pause_and_start"
            android:visibility="gone"/>
        
         <ImageView
            android:id="@+id/img_right_top_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:src="@drawable/catalog_red_ok"
            android:visibility="gone" />
        
        <ImageView
            android:id="@+id/img_right_top_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:src="@drawable/catalog_magazing_delete"
            android:visibility="gone" />
        
        <TextView
            android:id="@+id/progress"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dip"
            android:visibility="gone" />

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/loadprogress"
            android:layout_width="@dimen/round_progress_bar_gridload_size"
            android:layout_height="@dimen/round_progress_bar_gridload_size"
            android:layout_gravity="center"
            android:indeterminateDrawable="@anim/round_progress_bar_1" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dip"
        android:layout_marginRight="23dip" >

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    
    <TextView 
        android:visibility="gone"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="18dp"
        android:id="@+id/summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>